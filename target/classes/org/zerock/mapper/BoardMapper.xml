<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- MyBatis 매퍼 파일 시작, SQL 쿼리와 Java 인터페이스 매핑 관리 -->

<mapper namespace="org.zerock.mapper.BoardMapper">
    <!-- BoardMapper 인터페이스와 연결된 매퍼 설정 -->

    <select id="getList" resultType="org.zerock.domain.BoardVO">
        <!-- 게시물 목록 조회 쿼리, 결과 타입은 BoardVO -->
        select * from tbl_board where bno > 0
        <!-- bno가 0보다 큰 모든 레코드 선택 -->
    </select> 
    
    <insert id="insert">
        <!-- 게시물 삽입 쿼리, seq_board 시퀀스로 bno 생성 -->
    	insert into tbl_board (bno, title, content, writer)
    	values (seq_board.nextval, #{title}, #{content}, #{writer})
    </insert>
    
    <insert id="insertSelectKey">
        <!-- 삽입 전에 bno 값을 조회하고, 게시물 삽입 쿼리 실행 -->
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		insert into tbl_board (bno, title, content, writer)
		values (#{bno}, #{title}, #{content}, #{writer})
	</insert>
	
	<select id="read" resultType="org.zerock.domain.BoardVO">
	    <!-- 특정 게시물 조회 쿼리, 결과 타입은 BoardVO -->
		select * from tbl_board where bno = #{bno}
	</select>
	
	<delete id="delete">
	    <!-- 특정 게시물 삭제 쿼리 -->
		delete from tbl_board where bno = #{bno}
	</delete>
	
	<update id="update">
	    <!-- 게시물 업데이트 쿼리 -->
		update tbl_board set title = #{title}, content = #{content}, writer = #{writer}, updatedate = sysdate where bno = #{bno}
	</update>
	
</mapper>
<!-- MyBatis 매퍼 파일 끝 -->
